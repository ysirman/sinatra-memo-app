<form method="post" action="/edit/<%= @id %>" name="edit">
  <input type="hidden" name="_method" value="PATCH">
  <div class="mb-3">
    <label>メモタイトル</label>
    <input type="text" class="form-control" name="title" placeholder="明日の買い物" value="<%= @memo_data["title"] %>">
  </div>
  <div class="mb-3">
    <label for="validationTextarea">メモ本文</label>
    <textarea class="form-control" name="memo" placeholder="野菜と果物を買いに行く。" required><%= @memo_data["memo"].gsub(/<br \/>/, "\n") %></textarea>
  </div>
  <button class="btn btn-secondary" type="submit"><i class="fas fa-edit"></i> 変更</button>
  <a class="btn btn-warning" href="/show/<%= @id %>"><i class="fas fa-times"></i> キャンセル</a>
</form>